<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/primary</item>
    </style>
    <style name="regularText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/primary_dark_trans</item>
    </style>
</resources>